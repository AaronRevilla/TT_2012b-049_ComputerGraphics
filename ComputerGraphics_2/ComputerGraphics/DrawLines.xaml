        <Button Grid.ColumnSpan="2" Content="Leer Archivo" HorizontalAlignment="Left" Margin="174,79,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <Button Grid.ColumnSpan="2" Content="Linea" HorizontalAlignment="Left" Margin="313,36,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <TextBox x:Name="numLinea" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="20" Margin="424,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" />

    </Grid>
</Window>
